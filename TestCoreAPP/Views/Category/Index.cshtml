@model IEnumerable<Categories>
@{
    ViewData["Title"] = "Index ";
}

<h1>Categories Data</h1>
<partial name="_Notification" />
<div class="text-end">
    <a asp-controller="Category" asp-action="AddCat" class="btn btn-primary">
        <i class="bi bi-file-plus"></i>
        &nbsp; Add new Item
    </a>
</div>
<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th >Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-controller="Category" asp-action="EditCat" asp-route-id="@item.Id" class="btn-sm btn-success">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="DeleteCat" asp-route-id="@item.Id" class="btn-sm btn-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>


